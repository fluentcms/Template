{
  "Database": "LiteDb",
  "ConnectionStrings": {
    "DefaultConnection": "Filename=./fluentcms.db"
  },
  "ClientSettings": {
    "Url": "http://localhost:5000",
    "Key": ""
  },
  "JwtOptions": {
    "Issuer": "FluentCMS",
    "Audience": "FluentCMS",
    "Secret": "YOUR_SECRET_CHANGE_THIS_KEY",
    "TokenExpiry": -1,
    "RefreshTokenExpiry": -1
  },
  "Providers": {
    "Email": {
      "SmtpServerConfig": {
        "Server": "sandbox.smtp.mailtrap.io",
        "Port": 2525,
        "Username": "...",
        "Password": "...",
        "EnableSsl": true,
        "From": "admin@yoursite.com"
      }
    },
    "FileStorage": {
      "FileStorageConfig": {
        "Path": "files"
      }
    },
    "ApiToken": {
      "JwtApiTokenConfig": {
        "Secret": "YOUR_SECRET_KEY_SHOULD_BE_HERE!"
      }
    }
  }
}